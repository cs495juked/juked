<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateLobby">

    <EditText
        android:id="@+id/lobbyCodeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="84dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="97dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Your Unique Party Code is:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lobbyCode"
        android:layout_width="88dp"
        android:layout_height="54dp"
        android:layout_marginBottom="278dp"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="number"
        android:text="xxxx"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lobbyCodeLabel" />

    <Button
        android:id="@+id/createLobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start the Party"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="370dp" />
</android.support.constraint.ConstraintLayout>